package chapter20.Livrary2.controller;

import java.util.Scanner;

import chapter20.Livrary2.model.Book;
import chapter20.Livrary2.service.LibraryService;

public class LibraryCountroller {
	private LibraryService libraryService = new LibraryService();
	
	public void start() {
		Scanner sc = new Scanner(System.in);
		boolean running = true;
		
		while(running) {
			System.out.println("1 : 도서 등록 | 2 : 사용자 등록 | 3 : 도서 대여 | 4 : 도서 반납 | 5 : 도서 목록 조회 | 6 : 종료");
			
			int choice = sc.nextInt();
			sc.nextLine();	// 개행 문자(\n) 소비
			
			switch(choice) {
			case 1:
				System.out.println("도서 제목 : ");
				String title = sc.nextLine();
				
				System.out.println("도서 저자 : ");
				String author = sc.nextLine();
				libraryService.addBook(new Book(title, author, false));
				break;
			}
		}
	}
}
