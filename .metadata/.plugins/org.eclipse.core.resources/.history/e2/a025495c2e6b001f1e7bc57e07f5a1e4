package chapter03;

import java.util.Arrays;

// Arrays 클래스
// : 배열을 조작하는데 유용한 기능들을 제공
// >> 정렬, 검색, 변환 등

// - java.util 패키지 내부에 포함
// : import 구문을 사용

public class C_Array {

	public static void main(String[] args) {
		// 1. Arrays 클래스 사용법
		
		int[] numbers = {3, 2, 5, 4, 1};
		
		// === 배열 정렬 (오름차순) ===
		// Arrays.sort(정렬할 배열);
		Arrays.sort(numbers);
		System.out.println(numbers[0]);

	}

}
