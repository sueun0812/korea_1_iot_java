package chapter02;

public class D_While {

	public static void main(String[] args) {
		// while문
		// : 일반적으로 반복 횟수가 지정되지 않을 때 사용
		
		// 조건을 검사하고 해당 조건이 true인 경우 코드 블록을 실행
		// >> if 문의 반복 형태
		
		/*
		 	while (조건) {
		 		조건이 참일 때 실행
	 		}
		 */
		
		// 초기화
		int num = 1;
		while (num <= 5) {
			System.out.println(num);
		}

	}

}
